<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adurcup.remoteappforadurcup.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/up"
        android:src="@drawable/ic_expand_less_black_18dp"
        android:layout_above="@+id/select"
        android:backgroundTint="#757575"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/select"
        android:layout_marginRight="32dp"
        android:backgroundTint="#757575"
        android:id="@+id/left"
        android:layout_below="@+id/up"
        android:src="@drawable/ic_chevron_left_black_18dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right"
        android:backgroundTint="#757575"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/up"
        android:src="@drawable/ic_chevron_right_black_18dp"
        android:layout_toRightOf="@+id/select"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#757575"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/left"
        android:id="@+id/down"
        android:src="@drawable/ic_expand_more_black_18dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#757575"
        android:layout_marginTop="32dp"
        android:layout_centerInParent="true"
        android:id="@+id/select"
        android:src="@drawable/ic_fullscreen_black_18dp"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:backgroundTint="#757575"
        android:src="@drawable/ic_home_black_18dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/home"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#757575"
        android:id="@+id/back"
        android:text="BACK"
        android:src="@drawable/ic_keyboard_backspace_black_18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
